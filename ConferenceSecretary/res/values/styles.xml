<resources xmlns:android="http://schemas.android.com/apk/res/android"> <!-- Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowTitleSize">44dp</item>
    </style>
    
    
    <style name="mt_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/mt_tab_textcolor_selector</item>
        <item name="android:button">@null</item>
    </style>
   
  <style name="user_edit_text1" >
      <item name="android:textSize">15.5sp</item>
      <item name="android:textColor">@color/mt_text_6</item>
	  <item name="android:layout_marginLeft">15dp</item>                
	  <item name="android:gravity">left</item>
  </style> 
  
  <style name="user_edit_text2">
      <item name="android:textSize">15.5sp</item>
      <item name="android:textColor">@color/mt_text_inf</item>
      <item name="android:background">@null</item>
      <item name="android:lines">1</item>
  </style>
  
  <style name="enroll_layout">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:paddingLeft">12dp</item>
      <item name="android:paddingRight">12dp</item>
      <item name="android:layout_height">wrap_content</item>
  </style>
  
     <style name="stripe">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
      	<item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/stripe</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
		<item name="android:paddingBottom">14dp</item>        
		<item name="android:paddingTop">14dp</item>        
    </style>
    
   <style name="person_padding">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingTop">11dp</item>
    </style>
    
    
    <style name="guide_textView">
        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mt_white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        
    </style>
    
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_checkbox_bg</item>
    </style>
  
  <style name="enroll_textview">
	  <item name="android:layout_centerVertical">true</item>      
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:gravity">center</item>
      <item name="android:textSize">15sp</item>
      <item name="android:paddingBottom">12dp</item>
      <item name="android:paddingTop">12dp</item>
      <item name="android:textColor">@color/mt_text_6</item>
  </style>
  
  <style name="enroll_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
      	<item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/enroll_input_text</item>
       	<item name="android:paddingBottom">12dp</item>
       	<item name="android:paddingTop">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
    </style>
 
    <style name="modify_password">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@null</item>
    </style>
    
</resources>