<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/register_password_editext"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/common_edit_white"
            android:ems="10"
            android:hint="密   码："
            android:singleLine="true" >

            <requestFocus />
        </EditText>
        
        
	 	<EditText
            android:id="@+id/register_password_confirm_editext"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:inputType="textPassword"
            android:layout_below="@id/register_password_editext"
            android:background="@drawable/common_edit_white"
            android:ems="10"
            android:hint="确认密码："
            android:singleLine="true" >

        </EditText>

        <EditText
            android:id="@+id/register_email_edittext"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/register_password_confirm_editext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/common_edit_white"
            android:ems="10"
            android:hint="邮   箱："
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/register_nickname_edittext"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/register_email_edittext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/common_edit_white"
            android:ems="10"
            android:hint="昵   称："
            android:imeActionId="@+id/complete_ime"
            android:imeActionLabel="完成"
            android:imeOptions="actionUnspecified"
            android:singleLine="true" />

        <Button
            android:id="@+id/register_complete_button"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/register_nickname_edittext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/common_button_red_bg"
            android:text="完成"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</ScrollView>