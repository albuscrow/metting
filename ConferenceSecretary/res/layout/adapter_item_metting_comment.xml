<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    
    <ImageView
        android:id="@+id/comment_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/metting_comment_name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/comment_profile"
        android:text="夫斯克"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14.5sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/metting_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2014-7-8"
        android:textColor="#9e9e9e"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/metting_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/metting_comment_time"
        android:text="疯狂拉斯蒂附近的柯萨拉佛教阿斯"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:layout_toRightOf="@id/comment_profile"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="#6d6d6d" />
    
    <TextView
        android:id="@+id/comment_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/metting_comment_content"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/comment_more"
        android:text="@string/comment_more"
        android:textColor="@color/mt_blue"
        android:textSize="12sp" />

</RelativeLayout>