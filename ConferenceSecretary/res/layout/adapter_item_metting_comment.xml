<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    
    <ImageView
        android:id="@+id/comment_profile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/metting_comment_name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/comment_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/metting_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/mt_text_9"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/metting_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/metting_comment_time"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:layout_toRightOf="@id/comment_profile"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/mt_text_6" />
    
    <TextView
        android:id="@+id/comment_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/metting_comment_content"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/comment_more"
        android:text="@string/comment_more"
        android:textColor="@color/mt_blue"
        android:textSize="14sp" />

</RelativeLayout>