<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mt_home_bg"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_up"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/user_edit_text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/modify_password_old" />
            
            <EditText
                android:id="@+id/modify_password_old"
                style="@style/user_edit_text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:inputType="text"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/person_middle"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                style="@style/user_edit_text1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/modify_password_new" />
  
            <EditText
                android:id="@+id/edit_department_textview"
                style="@style/user_edit_text2"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:lines="1" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@drawable/person_down"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                style="@style/user_edit_text1"
                android:gravity="center"
                android:text="@string/modify_password_new2"/>
  
            <EditText
                android:id="@+id/edit_position_textview"
                style="@style/user_edit_text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:inputType="text"
                android:lines="1" />

        </LinearLayout>
        
    </LinearLayout>

</ScrollView>
