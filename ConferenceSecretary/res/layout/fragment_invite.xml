<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/share_invite_content"
        android:layout_marginTop="17dp"
        android:lineSpacingExtra="3dp"
        android:textSize="13sp"
        android:textColor="@color/mt_text_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/share_td_code"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="33dp"
        android:layout_below="@id/share_invite_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null" />

    <Spinner
        android:id="@+id/share_platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_td_code"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/share_spinner"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/share_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_platform"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/common_blue_button"
        android:gravity="center"
        android:text="@string/share_confirm"
        android:textColor="@color/mt_white"
        android:textSize="17sp" />

</RelativeLayout>
