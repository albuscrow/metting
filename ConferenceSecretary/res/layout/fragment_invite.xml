<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/share_invite_content"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/share_td_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/share_invite_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null" />

    <com.hjtech.secretary.view.NoDefaultSpinner
        android:id="@+id/share_platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_td_code"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/share_spinner"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/share_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_platform"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/common_blue_button"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/mt_white"
        android:text="@string/share_confirm" />

</RelativeLayout>
