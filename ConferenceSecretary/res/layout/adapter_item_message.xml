<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content" >

    <TextView
         android:id="@+id/message_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/mt_text_3"
         android:text="轩这其"
         android:textSize="13sp" />
    
    <TextView
        android:id="@+id/message_time"
        android:text="2014-08-09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="#aeaeae"
        android:textSize="12sp" />
    
    <ImageView
        android:id="@+id/message_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/message_time"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/edit_text_more" />
    
    <TextView
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_time"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/message_more"
        android:ellipsize="end"
        android:lines="2"
        android:text="消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容"
        android:textColor="#686868"
        android:textSize="12.4sp" />
       
</RelativeLayout>
