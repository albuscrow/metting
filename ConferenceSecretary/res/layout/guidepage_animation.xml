<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007aff" >
    
    <TextView
        android:id="@+id/t1"
        style="@style/guide_textView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/guide_t1"
        android:text="邀请" />

    <TextView
        android:id="@+id/t2"
        android:layout_below="@id/t1"
        style="@style/guide_textView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="-39dp"
        android:background="@drawable/guide_t2"
        android:text="报名" />
    
    <TextView
        android:id="@+id/t4"
        android:layout_below="@id/t2"
        style="@style/guide_textView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/guide_t4"
        android:text="抽奖" />
    
    <TextView
        android:id="@+id/t3"
        android:layout_below="@id/t2"
        style="@style/guide_textView"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="-75dp"
        android:background="@drawable/guide_t3"
        android:text="签到" />
    
    
    <TextView
        android:id="@+id/t5"
        android:layout_below="@id/t4"
        style="@style/guide_textView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/guide_t5"
        android:text="会务互动" />
    
    <TextView
        android:id="@+id/t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@null"
        android:text="移动办公会议秘书"
        android:textColor="@color/mt_white"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/t7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="@null"
        android:text="会小秘"
        android:textColor="@color/mt_white"
        android:textSize="25sp" />

</RelativeLayout>