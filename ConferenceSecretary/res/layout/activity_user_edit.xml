<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/edit_name_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_layout_white_header_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/edit_name"
                android:gravity="center"
                android:textColor="#888888"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/edit_name_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:inputType="text"
                android:lines="1"
                android:text="张三"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_nickname_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_layout_white_middle_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/edit_nick"
                android:gravity="center"
                android:textColor="#888888"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/edit_nickname_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:inputType="text"
                android:lines="1"
                android:text="张三"
                android:textSize="17sp" />

            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_password_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_layout_white_middle_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/edit_password"
                android:gravity="center"
                android:textColor="#888888"
                android:textSize="17sp" />
           

            <EditText
                android:id="@+id/edit_password_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:inputType="textPassword"
                android:lines="1"
                android:text="123456"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_sex_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_layout_white_middle_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/edit_gender"
                android:gravity="center"
                android:textColor="#888888"
                android:textSize="17sp" />
           
            

            <EditText
                android:id="@+id/edit_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:inputType="text"
                android:lines="1"
                android:text="男"
                android:textSize="17sp" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/edit_layout_white_footer_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_phonenum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/edit_phone"
                android:textColor="#888888"
                android:textSize="17sp" />
           
            <TextView
               	android:id="@+id/edit_phone" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:lines="1"
                android:text="13667607523"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_company_buuton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_layout_white_header_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/edit_unit"
                android:textColor="#888888"
                android:textSize="17sp" />
            
            <EditText
                android:id="@+id/edit_company_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:ellipsize="end"
                android:inputType="text"
                android:text="杭州华舰信息技术有限公司"
                android:textSize="17sp" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_department_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_layout_white_middle_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/edit_department"
                android:textColor="#888888"
                android:textSize="17sp" />
  
            <EditText
                android:id="@+id/edit_department_textview"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:lines="1"
                android:text="技术部" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/edit_post_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_layout_white_footer"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/edit_position"
                android:textColor="#888888"
                android:textSize="17sp" />
  
            <EditText
                android:id="@+id/edit_position_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:inputType="text"
                android:lines="1"
                android:text="软件工程师" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_qq_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_layout_white_header_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/edit_qq"
                android:textSize="17sp" 
                android:textColor="#888888" />
            
            <EditText
                android:id="@+id/edit_qq_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:inputType="number"
                android:lines="1"
                android:text="850900229"
                android:textSize="17sp" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/edit_email_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_layout_white_middle_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/edit_email"
                android:textSize="17sp" 
                android:textColor="#888888" />
            
            <EditText
                android:id="@+id/edit_email_textview"
                android:inputType="textEmailAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:lines="1"
                android:text="850900229@qq.com" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/edit_weixin_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_layout_white_footer_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edit_anchor_weixin"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textSize="17sp"
                android:text="@string/edit_weixin"
                android:textColor="#888888" />

            <EditText
                android:id="@+id/edit_weixin_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:inputType="text"
                android:lines="1"
                android:text="ying6ying" />

        </LinearLayout>

        
    </LinearLayout>

</ScrollView>
