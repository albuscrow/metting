<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/confenrence_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/anchor_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/confenrence_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/confenrence_image"
            android:text="时间：" />

        <TextView
            android:id="@+id/conference_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/anchor_time"
            android:layout_toRightOf="@id/anchor_time"
            android:text="2014.52.25-2015.25.55" />

        <TextView
            android:id="@+id/charge_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/anchor_time"
            android:layout_below="@id/anchor_time"
            android:layout_marginTop="2dp"
            android:text="免费会议" />

        <TextView
            android:id="@+id/anchor_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/charge_type"
            android:layout_below="@id/charge_type"
            android:layout_marginTop="2dp"
            android:text="会议地点：" />

        <TextView
            android:id="@+id/conference_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/anchor_place"
            android:layout_toRightOf="@id/anchor_place"
            android:text="北京市" />

        <TextView
            android:id="@+id/anchor_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/anchor_place"
            android:layout_below="@id/anchor_place"
            android:layout_marginTop="2dp"
            android:text="参会限制：" />

        <TextView
            android:id="@+id/conference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/anchor_limit"
            android:layout_toRightOf="@id/anchor_limit"
            android:text="限CIO级别的客户参加" />

        <Button
            android:id="@+id/collect_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@id/anchor_limit"
            android:layout_below="@id/anchor_limit"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_red_small_bg"
            android:minHeight="25dp"
            android:text="收藏"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/sign_up"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignTop="@id/collect_button"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/collect_button"
            android:background="@drawable/button_red_small_bg"
            android:text="报名"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/invite_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignTop="@id/sign_up"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/sign_up"
            android:background="@drawable/button_red_small_bg"
            android:text="邀请"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/introduction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/collect_button"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="会议详细信息简介"
            android:textColor="#555555"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/conference_introdution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/introduction_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/divider_bg"
            android:lines="4"
            android:maxEms="17"
            android:padding="5dp"
            android:text="会议是什么会议是什么会议是什么会议是什么会议是什么会议是什么会议是什么会议是什么会议是什么会议是什么会议是什么是" />

        <Button
            android:id="@+id/comment_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@id/conference_introdution"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_red_small_bg"
            android:text="评论"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/relative_conference_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/conference_introdution"
            android:layout_alignRight="@id/conference_introdution"
            android:layout_below="@id/comment_button"
            android:layout_marginTop="15dp"
            android:background="@drawable/title_gray"
            android:gravity="center"
            android:text="相关会议"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#333333"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/relative_conference_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/relative_conference_title"
            android:layout_alignRight="@id/relative_conference_title"
            android:layout_below="@id/relative_conference_title"
            android:divider="#888888"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false" >

        </ListView>

    </RelativeLayout>

</ScrollView>